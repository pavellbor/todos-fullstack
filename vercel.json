{
    "version": 2,
    "builds": [
      {
        "src": "/backend/build/app/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "/backend/build/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "/backend/database/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "/frontend/dist/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/backend/build/app/index.js",
        "methods": ["GET", "POST", "PUT", "PATCH", "DELETE",  "OPTIONS"]
      }
    ]
  }